---
const { title = "Coba Viajes", description = "Descubre viajes y paquetes turísticos con Coba Viajes", keywords = "viajes, paquetes turísticos, vacaciones, turismo" } = Astro.props;
import "/src/styles/global.css";
import Navbar from "../components/Navbar.jsx";
import Footer from "../components/Footer.jsx";
---
<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="keywords" content={keywords} />
    <meta name="author" content="Coba Viajes" />
    <meta name="robots" content="index, follow" />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:site_name" content="Coba Viajes" />
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    
    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  </head>
  <body class="min-h-screen bg-coba-gray">
    <Navbar client:load />
    
    <main class="min-h-screen">
      <slot />
    </main>

    <!-- Botón flotante de WhatsApp -->
    <a
      href={`https://wa.me/2364351443?text=${encodeURIComponent('Hola! Quiero hacer una consulta')}`}
      class="fixed bottom-6 right-6 z-50 inline-flex items-center justify-center w-14 h-14 rounded-full bg-green-500 hover:bg-green-600 text-white shadow-lg focus:outline-none focus:ring-2 focus:ring-green-400 focus:ring-offset-2"
      target="_blank"
      rel="noopener noreferrer"
      aria-label="Chatear por WhatsApp"
    >
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-7 h-7">
