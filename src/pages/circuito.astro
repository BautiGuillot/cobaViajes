---
import BaseLayout from "../layouts/BaseLayout.astro";
import CircuitoForm from "../components/CircuitoForm.jsx";
---

<BaseLayout title="Solicitar Circuito Personalizado - Coba Viajes" description="Crea tu circuito personalizado con los destinos y fechas que prefieras" keywords="circuito personalizado, viaje a medida, presupuesto viaje, destinos múltiples">
  <section class="py-16 bg-gradient-to-br from-blue-50 to-indigo-100">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h1 class="text-4xl font-bold text-gray-900 mb-4">Solicita tu Circuito Personalizado</h1>
        <p class="text-xl text-gray-600 max-w-2xl mx-auto">
          Diseñamos tu viaje perfecto según tus preferencias, fechas disponibles y destinos soñados
        </p>
      </div>
      
      <CircuitoForm client:load />
    </div>
  </section>
</BaseLayout>
