---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="Contacto - Coba Viajes" description="Contacta con COBÁ Viajes y Turismo para hacer realidad tu próximo viaje. Ubicados en Junín, Buenos Aires" keywords="contacto, COBÁ Viajes, Junín, Buenos Aires, agencia de viajes, cotizar viaje">
  <!-- Hero Section -->
  <section class="relative h-[40vh] flex items-center justify-center overflow-hidden">
    <!-- Imagen de fondo -->
    <div 
      class="absolute inset-0 bg-cover bg-center bg-no-repeat"
      style="background-image: url('https://images.unsplash.com/photo-1488646953014-85cb44e25828?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80')"
    ></div>
    
    <!-- Overlay con gradiente -->
    <div class="absolute inset-0 bg-gradient-to-br from-coba-charcoal/60 via-coba-teal/50 to-coba-royal/60"></div>
    
    <!-- Contenido -->
    <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <div class="animate-fade-in">
        <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold mb-4 text-coba-cream drop-shadow-lg">
          Contacto
        </h1>
        <p class="text-lg md:text-xl mb-6 max-w-3xl mx-auto text-coba-beige drop-shadow-md">
          Estamos aquí para hacer realidad tu próximo viaje
        </p>
      </div>
    </div>
  </section>

  <!-- Separador -->
  <div class="border-t-2 border-gray-300"></div>

  <!-- Información de contacto y formulario -->
  <section class="py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
        
        <!-- Información de contacto -->
        <div>
          <h2 class="text-3xl font-bold text-coba-charcoal mb-8">
            Ponte en Contacto
          </h2>
          
          <div class="space-y-6">
            <!-- Teléfono -->
            <div class="flex items-start">
              <div class="flex-shrink-0 w-12 h-12 bg-coba-yellow rounded-full flex items-center justify-center mr-4">
                <svg class="w-6 h-6 text-coba-charcoal" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                </svg>
              </div>
              <div>
                <h3 class="text-lg font-semibold text-coba-charcoal mb-1">Teléfono</h3>
                <a href="tel:+542364469157" class="text-gray-800 hover:text-coba-royal transition-colors text-lg">
                  2364 46-9157
                </a>
                <p class="text-gray-800 text-sm mt-1">Lunes a Viernes: 9:00 - 18:00</p>
              </div>
            </div>

            <!-- Dirección -->
            <div class="flex items-start">
              <div class="flex-shrink-0 w-12 h-12 bg-coba-yellow rounded-full flex items-center justify-center mr-4">
                <svg class="w-6 h-6 text-coba-charcoal" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
              </div>
              <div>
                <h3 class="text-lg font-semibold text-coba-charcoal mb-1">Dirección</h3>
                <p class="text-gray-800">
                  R. De Escalada 92<br>
                  Junín, Buenos Aires
                </p>
              </div>
            </div>

            <!-- WhatsApp -->
            <div class="flex items-start">
              <div class="flex-shrink-0 w-12 h-12 bg-coba-yellow rounded-full flex items-center justify-center mr-4">
                <svg class="w-6 h-6 text-coba-charcoal" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893A11.821 11.821 0 0020.885 3.488"/>
                </svg>
              </div>
              <div>
                <h3 class="text-lg font-semibold text-coba-charcoal mb-1">WhatsApp</h3>
                <a 
                  href={`https://wa.me/2364351443?text=${encodeURIComponent('Hola! Quiero cotizar un viaje')}`}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="text-gray-800 hover:text-coba-royal transition-colors"
                >
                  Envíanos un mensaje
                </a>
                <p class="text-gray-800 text-sm mt-1">Respuesta rápida garantizada</p>
              </div>
            </div>

            <!-- Email -->
            <div class="flex items-start">
              <div class="flex-shrink-0 w-12 h-12 bg-coba-yellow rounded-full flex items-center justify-center mr-4">
                <svg class="w-6 h-6 text-coba-charcoal" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                </svg>
              </div>
              <div>
                <h3 class="text-lg font-semibold text-coba-charcoal mb-1">Email</h3>
                <a href="mailto:info@cobaviajes.com" class="text-gray-800 hover:text-coba-royal transition-colors">
                  info@cobaviajes.com
                </a>
                <p class="text-gray-800 text-sm mt-1">Te responderemos en 24 horas</p>
              </div>
            </div>
          </div>

          <!-- Horarios de atención -->
          <div class="mt-8 p-6 bg-white rounded-2xl">
            <h3 class="text-xl font-bold text-coba-charcoal mb-4">Horarios de Atención</h3>
            <div class="space-y-2">
              <div class="flex justify-between">
                <span class="text-gray-800">Lunes - Viernes</span>
                <span class="text-coba-charcoal font-medium">9:00 - 18:00</span>
              </div>
              <div class="flex justify-between">
                <span class="text-gray-800">Sábados</span>
                <span class="text-coba-charcoal font-medium">9:00 - 13:00</span>
              </div>
              <div class="flex justify-between">
                <span class="text-gray-800">Domingos</span>
                <span class="text-coba-charcoal font-medium">Cerrado</span>
              </div>
            </div>
          </div>
        </div>

        <!-- Formulario de contacto -->
        <div>
          <div class="bg-white p-8 rounded-2xl shadow-lg">
            <h2 class="text-2xl font-bold text-coba-charcoal mb-6">
              Envíanos un Mensaje
            </h2>
            
            <form class="space-y-6" id="contactForm">
              <!-- Nombre -->
              <div>
                <label for="nombre" class="block text-sm font-medium text-coba-charcoal mb-2">
                  Nombre Completo *
                </label>
                <input
                  type="text"
                  id="nombre"
                  name="nombre"
                  required
                  class="w-full px-4 py-3 border border-coba-teal rounded-lg focus:ring-2 focus:ring-coba-yellow focus:border-transparent transition-colors bg-white text-coba-charcoal placeholder-coba-teal"
                  placeholder="Tu nombre completo"
                />
              </div>

              <!-- Email -->
              <div>
                <label for="email" class="block text-sm font-medium text-coba-charcoal mb-2">
                  Email *
                </label>
                <input
                  type="email"
                  id="email"
                  name="email"
                  required
                  class="w-full px-4 py-3 border border-coba-teal rounded-lg focus:ring-2 focus:ring-coba-yellow focus:border-transparent transition-colors bg-white text-coba-charcoal placeholder-coba-teal"
                  placeholder="tu@email.com"
                />
              </div>

              <!-- Teléfono -->
              <div>
                <label for="telefono" class="block text-sm font-medium text-coba-charcoal mb-2">
                  Teléfono
                </label>
                <input
                  type="tel"
                  id="telefono"
                  name="telefono"
                  class="w-full px-4 py-3 border border-coba-teal rounded-lg focus:ring-2 focus:ring-coba-yellow focus:border-transparent transition-colors bg-white text-coba-charcoal placeholder-coba-teal"
                  placeholder="(2364) 123-4567"
                />
              </div>

              <!-- Tipo de consulta -->
              <div>
                <label for="consulta" class="block text-sm font-medium text-coba-charcoal mb-2">
                  Tipo de Consulta *
                </label>
                <select
                  id="consulta"
                  name="consulta"
                  required
                  class="w-full px-4 py-3 border border-coba-teal rounded-lg focus:ring-2 focus:ring-coba-yellow focus:border-transparent transition-colors bg-white text-coba-charcoal"
                >
                  <option value="">Selecciona una opción</option>
                  <option value="cotizacion">Cotización de paquete</option>
                  <option value="informacion">Información general</option>
                  <option value="grupos">Viajes en grupo</option>
                  <option value="corporativo">Viajes corporativos</option>
                  <option value="luna-miel">Luna de miel</option>
                  <option value="otro">Otro</option>
                </select>
              </div>

              <!-- Destino de interés -->
              <div>
                <label for="destino" class="block text-sm font-medium text-coba-charcoal mb-2">
                  Destino de Interés
                </label>
                <input
                  type="text"
                  id="destino"
                  name="destino"
                  class="w-full px-4 py-3 border border-coba-teal rounded-lg focus:ring-2 focus:ring-coba-yellow focus:border-transparent transition-colors bg-white text-coba-charcoal placeholder-coba-teal"
                  placeholder="Ej: Cancún, Europa, Asia..."
                />
              </div>

              <!-- Fecha de viaje -->
              <div>
                <label for="fecha" class="block text-sm font-medium text-coba-charcoal mb-2">
                  Fecha Aproximada de Viaje
                </label>
                <input
                  type="date"
                  id="fecha"
                  name="fecha"
                  class="w-full px-4 py-3 border border-coba-teal rounded-lg focus:ring-2 focus:ring-coba-yellow focus:border-transparent transition-colors bg-white text-coba-charcoal"
                />
              </div>

              <!-- Mensaje -->
              <div>
                <label for="mensaje" class="block text-sm font-medium text-coba-charcoal mb-2">
                  Mensaje *
                </label>
                <textarea
                  id="mensaje"
                  name="mensaje"
                  rows="4"
                  required
                  class="w-full px-4 py-3 border border-coba-teal rounded-lg focus:ring-2 focus:ring-coba-yellow focus:border-transparent transition-colors bg-coba-cream text-coba-charcoal placeholder-coba-teal resize-none"
                  placeholder="Cuéntanos más detalles sobre tu viaje ideal..."
                ></textarea>
              </div>

              <!-- Botón de envío -->
              <div class="flex flex-col sm:flex-row gap-4">
                <button
                  type="submit"
                  class="flex-1 bg-coba-teal hover:bg-coba-charcoal text-coba-cream px-6 py-3 rounded-lg font-semibold transition-colors duration-200 transform hover:scale-105 shadow-lg hover:shadow-xl"
                >
                  Enviar Mensaje
                </button>
                <a
                  href={`https://wa.me/2364351443?text=${encodeURIComponent('Hola! Quiero cotizar un viaje')}`}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="flex-1 bg-coba-whatsapp hover:bg-green-600 text-white px-6 py-3 rounded-lg font-semibold transition-colors duration-200 transform hover:scale-105 shadow-lg hover:shadow-xl text-center"
                >
                  WhatsApp Directo
                </a>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Separador con decoración -->
  <div class="py-8">
    <div class="max-w-7xl mx-auto px-4">
      <div class="border-t-2 border-gray-300"></div>
    </div>
  </div>

  <!-- Mapa de ubicación -->
  <section class="py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-coba-charcoal mb-4">
          Nuestra Ubicación
        </h2>
        <p class="text-lg text-gray-800 max-w-2xl mx-auto">
          Visítanos en nuestra oficina en el corazón de Junín
        </p>
      </div>

      <div class="bg-coba-cream rounded-2xl overflow-hidden shadow-2xl">
        <!-- Mapa placeholder - En producción se puede reemplazar con Google Maps -->
        <div class="h-96 bg-gradient-to-br from-coba-teal to-coba-royal flex items-center justify-center">
          <div class="text-center text-coba-cream">
            <div class="w-16 h-16 bg-coba-yellow rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-coba-charcoal" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-bold mb-2">R. De Escalada 92</h3>
            <p class="text-lg">Junín, Buenos Aires</p>
            <p class="text-sm mt-2 opacity-90">Argentina</p>
          </div>
        </div>
      </div>

      <!-- Información adicional del mapa -->
      <div class="mt-8 text-center">
        <p class="text-gray-800 mb-4">
          <strong>¿Cómo llegar?</strong> Estamos ubicados en el centro de Junín, fácil acceso en transporte público y con estacionamiento disponible.
        </p>
        <a
          href="https://maps.google.com/?q=R.+De+Escalada+92,+Junín,+Buenos+Aires"
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center px-6 py-3 text-coba-charcoal bg-coba-yellow rounded-lg font-semibold transition-colors duration-200 hover:opacity-90"
        >
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7"></path>
          </svg>
          Ver en Google Maps
        </a>
      </div>
    </div>
  </section>


  <script>
    // Manejo del formulario de contacto
    document.addEventListener('DOMContentLoaded', function() {
      const form = document.getElementById('contactForm');
      
      if (form && form instanceof HTMLFormElement) {
        form.addEventListener('submit', function(e) {
          e.preventDefault();
          
          // Recopilar datos del formulario
          const formData = new FormData(form);
          const data = Object.fromEntries(formData);
          
          // Crear mensaje para WhatsApp
          let mensaje = `Hola! Me contacto desde la web de COBA Viajes.\n\n`;
          mensaje += `*Datos de contacto:*\n`;
          mensaje += `Nombre: ${data.nombre}\n`;
          mensaje += `Email: ${data.email}\n`;
          if (data.telefono) mensaje += `Telefono: ${data.telefono}\n`;
          mensaje += `Tipo de consulta: ${data.consulta}\n`;
          if (data.destino) mensaje += `Destino de interes: ${data.destino}\n`;
          if (data.fecha) mensaje += `Fecha de viaje: ${data.fecha}\n`;
          mensaje += `\n*Mensaje:*\n${data.mensaje}\n\nGracias!`;
          
          // Abrir WhatsApp con el mensaje
          const whatsappUrl = `https://wa.me/2364351443?text=${encodeURIComponent(mensaje)}`;
          window.open(whatsappUrl, '_blank');
          
          // Mostrar mensaje de confirmación
          alert('¡Gracias por contactarnos! Te redirigimos a WhatsApp para completar tu consulta.');
          
          // Limpiar formulario
          form.reset();
        });
      }
    });
  </script>
</BaseLayout>
