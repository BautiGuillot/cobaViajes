---
import BaseLayout from "../layouts/BaseLayout.astro";
import PaquetesGrid from "../components/PaquetesGrid.jsx";

const API_URL = import.meta.env.PUBLIC_API_URL;
const DOMINIO = import.meta.env.PUBLIC_DOMINIO;
---

<BaseLayout title="Paquetes - Coba Viajes">
  <section class="py-16 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h1 class="text-4xl font-bold text-gray-900 mb-4">Paquetes de Viaje</h1>
        <p class="text-lg text-gray-600">Descubre todas nuestras ofertas disponibles</p>
      </div>
      
      <PaquetesGrid client:load apiUrl={API_URL} dominio={DOMINIO} />
    </div>
  </section>
</BaseLayout>