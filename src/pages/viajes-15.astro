---
import BaseLayout from "../layouts/BaseLayout.astro";
import Viajes15Grid from "../components/Viajes15Grid.jsx";
---

<BaseLayout title="Viajes de 15 Años - Coba Viajes">
  <!-- Hero estilo unificado -->
  <section class="relative h-[50vh] flex items-center justify-center overflow-hidden">
    <!-- Imagen de fondo -->
    <div 
      class="absolute inset-0 bg-cover bg-center bg-no-repeat"
      style="background-image: url('https://images.unsplash.com/photo-1516051662687-567d7c4e8f6a?ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&q=80&w=1550')"
    ></div>
    
    <!-- Overlay COBÁ -->
    <div class="absolute inset-0 bg-gradient-to-br from-coba-charcoal/60 via-coba-teal/50 to-coba-royal/60"></div>
    
    <!-- Contenido -->
    <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <div class="animate-fade-in">
        <h1 class="text-3xl md:text-5xl lg:text-6xl font-bold mb-4 text-coba-cream drop-shadow-lg">
          Viajes de 15 Años
        </h1>
        <p class="text-lg md:text-2xl mb-6 max-w-4xl mx-auto text-coba-beige drop-shadow-md leading-relaxed">
          Celebra tu momento especial con experiencias mágicas en Orlando, Miami y más
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a
            href="#viajes15"
            class="text-coba-charcoal bg-coba-yellow px-6 py-3 rounded-lg font-semibold transition-all duration-300 transform hover:scale-105 shadow-lg hover:shadow-xl hover:opacity-90"
          >
            Explorar Experiencias
          </a>
          <a
            href={`https://wa.me/2364351443?text=${encodeURIComponent('Hola! Quiero información sobre viajes de 15 años')}`}
            target="_blank"
            rel="noopener noreferrer"
            class="border-2 border-white hover:bg-white hover:text-coba-royal text-white px-6 py-3 rounded-lg font-semibold transition-all duration-300 transform hover:scale-105 shadow-lg hover:shadow-xl"
          >
            Consultar por WhatsApp
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Separador -->
  <div class="border-t border-gray-200"></div>

  <section id="viajes15" class="py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <Viajes15Grid client:load />
    </div>
  </section>
</BaseLayout>

<style>
  @keyframes fade-in {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }
  .animate-fade-in { animation: fade-in 1s ease-out; }
</style>

